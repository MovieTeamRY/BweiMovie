<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_312"
    android:layout_height="@dimen/dp_80"
    android:id="@+id/scheduling_relative"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/mine_linear_bg"
    android:padding="@dimen/dp_10"
    android:elevation="@dimen/dp_2"
    >
    <TextView
        android:id="@+id/scheduling_loc"
        android:layout_width="wrap_content"
        android:textSize="@dimen/dp_12"
        android:layout_height="wrap_content"
        android:textColor="#666"
        android:text="12313"

        />
    <TextView
        android:id="@+id/scheduling_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#666"
        android:layout_toRightOf="@id/scheduling_loc"
        android:layout_marginLeft="@dimen/dp_20"
        android:text="国语3D"
        />
    <TextView
        android:id="@+id/start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/sp_24"
        android:textColor="#333"
        android:text="14:30"
        />
    <View
        android:id="@+id/middle"
        android:layout_width="@dimen/dp_30"
        android:layout_height="2dp"
        android:layout_toRightOf="@id/start_time"
        android:layout_alignBottom="@id/start_time"
        android:layout_marginBottom="@dimen/dp_14"
        android:background="#666"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/end_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/middle"
        android:layout_alignBottom="@id/start_time"
        android:layout_marginBottom="@dimen/dp_3"
        android:textSize="@dimen/sp_18"
        android:text="17:50"
        android:textColor="#666"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/end_time"
        android:layout_alignBottom="@id/end_time"
        android:layout_marginBottom="@dimen/dp_2"
        android:text="end"
        />
    <ImageView
        android:id="@+id/scheduling_next"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_24"
        android:layout_alignParentRight="true"
        android:src="@mipmap/com_icon_next_default"
        android:layout_centerVertical="true"
        />
    <TextView
        android:id="@+id/scheduling_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/scheduling_next"
        android:layout_marginRight="@dimen/dp_10"
        android:textSize="@dimen/sp_36"
        android:textColor="#b11450"
        android:text="2"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¥"
        android:textColor="#666"
        android:textSize="@dimen/sp_18"
        android:layout_alignBottom="@id/scheduling_price"
        android:layout_marginBottom="@dimen/dp_5"
        android:layout_toLeftOf="@id/scheduling_price"
        />
</RelativeLayout>