<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="@dimen/dp_24"
    android:paddingLeft="@dimen/dp_24"
    tools:context=".purchase.activity.PlayVideoCinemaActivity">
<android.support.constraint.ConstraintLayout
    android:id="@+id/cinema_layout"
    android:layout_width="@dimen/dp_0"
    android:layout_height="wrap_content"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_marginTop="@dimen/dp_30">
    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cinema_line"
        android:layout_marginRight="@dimen/dp_20"
        android:textColor="#666666"/>
    <TextView
        android:id="@+id/cinema_address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:textColor="#666666"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/cinema_line"
        android:layout_marginRight="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@id/cinema_name"
        android:layout_marginTop="@dimen/dp_10"/>
    <ImageView
        android:id="@+id/cinema_line"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:background="@mipmap/com_icon_navigation_default"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
   </android.support.constraint.ConstraintLayout>
    <android.support.constraint.ConstraintLayout
        android:id="@+id/film_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cinema_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_6"
        android:background="@mipmap/cinema_item_back_image">
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/film_image"
            android:layout_width="@dimen/dp_103"
            android:layout_height="@dimen/dp_130"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/film_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/film_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_20" />
        <TextView
            android:id="@+id/film_class"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/film_name"
            app:layout_constraintLeft_toRightOf="@id/film_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/film_director"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/film_class"
            app:layout_constraintLeft_toRightOf="@id/film_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/film_data"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/film_director"
            app:layout_constraintLeft_toRightOf="@id/film_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />
        <TextView
            android:id="@+id/film_address"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/film_data"
            app:layout_constraintLeft_toRightOf="@id/film_image"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_20"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_12" />
    </android.support.constraint.ConstraintLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/film_recyclerview"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/film_layout"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"/>
    <ImageView
        android:id="@+id/return_image"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/com_icon_return_default"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintLeft_toLeftOf="parent" />
</android.support.constraint.ConstraintLayout>