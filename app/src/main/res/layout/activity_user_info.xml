<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mine.activity.UserInfoActivity">

    <TextView
        android:id="@+id/text_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#333"
        android:text="用户信息"
        android:layout_alignLeft="@id/user_relative_top"
        android:layout_marginTop="@dimen/dp_30"
        />

    <RelativeLayout
        android:id="@+id/user_relative_top"
        android:layout_below="@id/text_user"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_30"
        android:padding="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_recycler_simple_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户头像"
            android:gravity="center"
            android:textSize="@dimen/sp_14"
            android:textColor="#333"
            android:layout_alignTop="@id/user_simple"
            android:layout_alignBottom="@id/user_simple"
            fresco:placeholderImage="@mipmap/icon"
            tools:ignore="MissingPrefix" />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/user_simple"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            fresco:roundAsCircle="true"
            android:layout_alignParentRight="true"
            />
        <View
            android:id="@+id/view01"
            android:layout_below="@id/user_simple"
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_2"
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_alignBottom="@id/user_nikeName"
            android:textColor="#333"
            android:text="用户昵称"
            />
        <TextView
            android:id="@+id/user_nikeName"
            android:layout_below="@+id/view01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#999"
            android:textSize="@dimen/sp_14"
            android:text="你的益达"
            />
        <View
            android:id="@+id/view02"
            android:layout_below="@id/user_nikeName"
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_2"
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_alignBottom="@id/user_sex"
            android:textColor="#333"
            android:text="用户性别"
            />
        <TextView
            android:id="@+id/user_sex"
            android:layout_below="@+id/view02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#999"
            android:textSize="@dimen/sp_14"
            android:text="男"
            />
        <View
            android:id="@+id/view03"
            android:layout_below="@id/user_sex"
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_2"
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_alignBottom="@id/user_brith"
            android:textColor="#333"
            android:text="用户生日"
            />
        <TextView
            android:id="@+id/user_brith"
            android:layout_below="@+id/view03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#999"
            android:textSize="@dimen/sp_14"
            android:text="1980-02-25"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_relative_mid"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/user_relative_top"
        android:padding="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_recycler_simple_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_alignBottom="@id/user_phone"
            android:textColor="#333"
            android:text="手机号"
            />
        <TextView
            android:id="@+id/user_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="#999"
            android:textSize="@dimen/sp_14"
            android:text="15188888888"
            />
        <View
            android:id="@+id/view04"
            android:layout_below="@id/user_phone"
            android:layout_width="@dimen/dp_272"
            android:layout_height="@dimen/dp_2"
            android:background="#f2f2f2"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_alignBottom="@id/user_email"
            android:textColor="#333"
            android:text="邮箱"
            />
        <TextView
            android:id="@+id/user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view04"
            android:layout_alignParentRight="true"
            android:textColor="#999"
            android:textSize="@dimen/sp_14"
            android:text="123@163.com"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/user_relative_bottom"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_below="@+id/user_relative_mid"
        android:padding="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home_recycler_simple_bg"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_14"
            android:layout_alignBottom="@id/user_pwd"
            android:textColor="#333"
            android:text="重置密码"
            />
        <ImageButton
            android:id="@+id/user_pwd"
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_18"
            android:layout_alignParentRight="true"
            android:background="@mipmap/com_icon_next_default"
            />
    </RelativeLayout>
</RelativeLayout>