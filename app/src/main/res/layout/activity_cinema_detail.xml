<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".cinema.activity.CinemaDetailActivity"
    >
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_220"
            android:background="@mipmap/home_film_back_image"
            />
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/cinema_logo"
            android:layout_width="@dimen/dp_57"
            android:layout_height="@dimen/dp_57"
            fresco:roundedCornerRadius="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_marginLeft="@dimen/dp_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <TextView
            android:id="@+id/cinema_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintLeft_toRightOf="@id/cinema_logo"
            app:layout_constraintTop_toTopOf="@id/cinema_logo"
            />
        <TextView
            android:id="@+id/cinema_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_13"
            android:textColor="#fff"
            android:layout_marginLeft="@dimen/dp_20"
            app:layout_constraintLeft_toRightOf="@id/cinema_logo"
            app:layout_constraintBottom_toBottomOf="@id/cinema_logo"
            />
        <ImageView
            android:id="@+id/cinema_navigation"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:layout_marginRight="@dimen/dp_24"
            android:background="@mipmap/com_icon_navigation_default"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/cinema_logo"
            app:layout_constraintBottom_toBottomOf="@id/cinema_logo"
            />
        <recycler.coverflow.RecyclerCoverFlow
            android:id="@+id/cinema_film"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_180"
            android:layout_marginTop="@dimen/dp_105"
            android:overScrollMode="never"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <RadioGroup
            android:id="@+id/cinema_group"
            android:layout_width="@dimen/dp_312"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/home_radiogroup_bg"
            app:layout_constraintTop_toBottomOf="@id/cinema_film"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            >
        </RadioGroup>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/cinema_film_scheduling"
            app:layout_constraintTop_toBottomOf="@id/cinema_film"
            android:layout_marginTop="@dimen/dp_33"
            android:layout_width="@dimen/dp_316"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            ></android.support.v7.widget.RecyclerView>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
