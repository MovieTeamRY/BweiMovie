<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".cinema.activity.CinemaDetailActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_220"
        android:background="@mipmap/cinema_item_back_image"
        />
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cinema_logo"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        fresco:roundedCornerRadius="@dimen/dp_4"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:textSize="@dimen/sp_18"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@id/cinema_logo"
        app:layout_constraintTop_toTopOf="@id/cinema_logo"
        />
    <TextView
        android:id="@+id/cinema_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintLeft_toRightOf="@id/cinema_logo"
        app:layout_constraintBottom_toBottomOf="@id/cinema_logo"
        />
    <ImageView
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_marginRight="@dimen/dp_24"
        android:background="@mipmap/com_icon_navigation_default"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/cinema_logo"
        app:layout_constraintBottom_toBottomOf="@id/cinema_logo"
        />
    <recycler.coverflow.RecyclerCoverFlow
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_180"
        android:layout_marginTop="@dimen/dp_105"
        android:overScrollMode="never"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></recycler.coverflow.RecyclerCoverFlow>
</android.support.constraint.ConstraintLayout>