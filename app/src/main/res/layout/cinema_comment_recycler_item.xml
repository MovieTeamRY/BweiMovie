<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/comment_navater"
        android:layout_width="@dimen/dp_40"
        android:layout_height="@dimen/dp_40"
        fresco:roundAsCircle="true"
        fresco:placeholderImage="@drawable/loading_image"
        fresco:placeholderImageScaleType="fitCenter"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/comment_nikeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#333"
        android:gravity="center_vertical"
        android:layout_alignTop="@id/comment_navater"
        android:layout_alignBottom="@id/comment_navater"
        android:layout_toRightOf="@id/comment_navater"
        />
    <TextView
        android:id="@+id/comment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#333"
        android:textSize="@dimen/sp_12"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_below="@id/comment_navater"
        />
    <TextView
        android:id="@+id/comment_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="@dimen/sp_12"
        android:layout_below="@id/comment_content"
        android:layout_marginBottom="@dimen/dp_10"
        />
    <ImageView
        android:id="@+id/comment_prise"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@mipmap/com_icon_praise_default"
        android:layout_toLeftOf="@id/comment_num"
        android:layout_alignBottom="@id/comment_num"
        />
    <TextView
        android:id="@+id/comment_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#666"
        android:textSize="@dimen/sp_12"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/comment_time"
        android:layout_alignTop="@id/comment_time"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/comment_time"
        android:background="#ccc"
        />

</RelativeLayout>