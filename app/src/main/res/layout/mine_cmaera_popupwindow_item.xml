<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintLeft_toLeftOf="@id/text_camera"
                app:layout_constraintRight_toRightOf="@id/text_camera"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#ccc"
                />
            <TextView
                android:id="@+id/text_camera"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="打开相机"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view1"
                android:textSize="@dimen/sp_20"
                android:textColor="#222222"
                android:padding="@dimen/dp_10"
                />
            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintLeft_toLeftOf="@id/text_camera"
                app:layout_constraintRight_toRightOf="@id/text_camera"
                app:layout_constraintTop_toBottomOf="@id/text_camera"
                android:background="#ccc"
                />
            <TextView
                android:id="@+id/text_pick"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="从相册选择"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@id/text_camera"
                app:layout_constraintRight_toRightOf="@id/text_camera"
                app:layout_constraintTop_toBottomOf="@id/view"
                android:textSize="@dimen/sp_20"
                android:textColor="#222222"
                android:padding="@dimen/dp_10"
                />
            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                app:layout_constraintLeft_toLeftOf="@id/text_camera"
                app:layout_constraintRight_toRightOf="@id/text_camera"
                app:layout_constraintTop_toBottomOf="@id/text_pick"
                android:background="#ccc"
                />
            <TextView
                android:id="@+id/text_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="取消"
                android:gravity="center"
                app:layout_constraintLeft_toLeftOf="@id/text_pick"
                app:layout_constraintRight_toRightOf="@id/text_pick"
                app:layout_constraintTop_toBottomOf="@id/view2"
                android:textSize="@dimen/sp_20"
                android:textColor="#fff"
                android:padding="@dimen/dp_10"
                android:background="@drawable/my_popupwindow_item_shape"
                />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>