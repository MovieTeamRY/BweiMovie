<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cinema_relative"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/dp_90"
    android:paddingLeft="@dimen/dp_10"
    android:paddingRight="@dimen/dp_20"
    android:paddingTop="@dimen/dp_10"
    android:paddingBottom="@dimen/dp_10"
    android:layout_gravity="center_horizontal"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/cinema_tab_bg_unselected"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cinema_simple"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        android:layout_marginRight="@dimen/dp_20"
        />
    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/cinema_simple"
        android:layout_alignParentRight="true"
        android:textColor="#333"
        android:textSize="@dimen/sp_14"
        android:maxLines="1"
        android:ellipsize="end"
        />
    <TextView
        android:id="@+id/cinema_address"
        android:textSize="@dimen/sp_12"
        android:textColor="#333"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cinema_name"
        android:layout_toRightOf="@id/cinema_simple"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:id="@+id/cinema_length"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/cinema_simple"
        android:layout_toRightOf="@id/cinema_simple"
        />
    <ImageView
        android:id="@+id/cinema_prise"
        android:layout_width="@dimen/dp_16"
        android:layout_height="@dimen/dp_16"
        android:layout_alignParentRight="true"
        android:layout_alignBottom="@id/cinema_simple"
        />

</RelativeLayout>