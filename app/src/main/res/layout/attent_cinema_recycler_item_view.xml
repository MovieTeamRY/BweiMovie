<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_10"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginTop="@dimen/dp_10"
    android:background="@drawable/home_recycler_simple_bg"
    xmlns:fresco="http://schemas.android.com/apk/res-auto">
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/cinema_simple"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_70"
        fresco:roundAsCircle="true"
        fresco:roundedCornerRadius="@dimen/dp_4"
        />
    <TextView
        android:id="@+id/cinema_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_14"
        android:textColor="#333"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_toRightOf="@id/cinema_simple"
        />
    <TextView
        android:id="@+id/cinema_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:textColor="#333"
        android:textSize="@dimen/sp_12"
        android:layout_toRightOf="@id/cinema_simple"
        android:layout_below="@id/cinema_name"
        />
</RelativeLayout>