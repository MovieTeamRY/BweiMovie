<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login"
    android:gravity="center_horizontal"
    tools:context=".login.LoginActivity">
    
    <ImageView
        android:id="@+id/login_image_phone"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_80"
        android:layout_marginRight="@dimen/dp_7"
        android:background="@mipmap/log_icon_phone_default"
        />
    <EditText
        android:id="@+id/login_text_phone"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_80"
        android:hint="手机号"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:inputType="number"
        android:background="@null"
        android:layout_toRightOf="@+id/login_image_phone"
        />
    <View
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_2"
        android:layout_marginTop="15dp"
        android:layout_below="@id/login_image_phone"
        android:background="#fff"/>
    <ImageView
        android:id="@+id/login_image_lock"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_40"
        android:background="@mipmap/log_icon_lock_default"
        />
    />
    <EditText
        android:id="@+id/login_text_pwd"
        android:layout_width="@dimen/dp_280"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_80"
        android:hint="手机号"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:inputType="number"
        android:background="@null"
        android:layout_toRightOf="@+id/login_image_phone"
        />
    <View
        android:layout_width="@dimen/dp_312"
        android:layout_height="@dimen/dp_2"
        android:background="#fff"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_below="@+id/login_image_lock"
        />
</RelativeLayout>