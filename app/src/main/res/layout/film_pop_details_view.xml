<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/tools"
    android:background="#10dcdcdc"

    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/detail_loyout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@drawable/film_detail_loyout_bg">
        <TextView
            android:id="@+id/class_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="类型：动作/科幻/冒险"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_down"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_155"/>
        <TextView
            android:id="@+id/director_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="导演：沙恩 布莱克"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/class_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_down"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_155"/>
        <TextView
            android:id="@+id/data_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="时长：106分钟"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/director_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_down"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_155"/>
        <TextView
            android:id="@+id/address_name"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="产地：美国"
            android:textSize="@dimen/sp_12"
            android:textColor="#333333"
            app:layout_constraintTop_toBottomOf="@id/data_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/detail_down"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_155"/>
        <ImageView
            android:id="@+id/detail_down"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:background="@mipmap/com_icon_down_default"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_15"/>
        <TextView
            android:id="@+id/plot_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剧情简介"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@+id/address_name"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_39"
            android:layout_marginLeft="@dimen/dp_24"/>
        <View
            android:id="@+id/view_plot"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/divide_checked"
            app:layout_constraintTop_toBottomOf="@id/plot_name"
            app:layout_constraintLeft_toLeftOf="@id/plot_name"
            android:layout_marginTop="@dimen/dp_6"/>
        <TextView
            android:id="@+id/plot_name_text"
            android:layout_width="@dimen/dp_0"
            android:layout_height="wrap_content"
            android:text="剧情简介"
            android:textColor="#333333"
            android:textSize="@dimen/sp_12"
            android:maxLines="4"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/view_plot"
            app:layout_constraintLeft_toLeftOf="@id/plot_name"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_10"/>
        <TextView
            android:id="@+id/performer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="演职人员"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toBottomOf="@id/plot_name_text"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"/>
        <View
            android:id="@+id/view_performer"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/divide_checked"
            app:layout_constraintTop_toBottomOf="@id/performer_name"
            app:layout_constraintLeft_toLeftOf="@id/performer_name"
            android:layout_marginTop="@dimen/dp_6"/>
        <TextView
            android:id="@+id/text_name"
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_32"
            android:text="演员名字"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/login_but_bg"
            app:layout_constraintTop_toBottomOf="@id/view_performer"
            app:layout_constraintLeft_toLeftOf="@id/view_performer"
            android:layout_marginTop="@dimen/dp_12"/>
        <TextView
            android:layout_width="@dimen/dp_75"
            android:layout_height="@dimen/dp_32"
            android:text="饰演角色"
            android:textSize="@dimen/sp_12"
            android:textColor="#ffffff"
            android:gravity="center"
            android:background="@drawable/login_but_bg"
            app:layout_constraintTop_toBottomOf="@id/view_performer"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_12"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/actor_recyclerview"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@id/text_name"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_10"/>
    </android.support.constraint.ConstraintLayout>
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/image_detail_three"
        android:layout_width="@dimen/dp_111"
        android:layout_height="@dimen/dp_149"
        fresco:placeholderImage="@mipmap/login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/dp_90"
        android:layout_marginLeft="@dimen/dp_24"
        android:background="@mipmap/ic_launcher_round"/>
</android.support.constraint.ConstraintLayout>