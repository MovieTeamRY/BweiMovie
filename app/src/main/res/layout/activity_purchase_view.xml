<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".purchase.activity.PurchaseActivity">
<TextView
    android:id="@+id/movieNmae"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="@dimen/sp_18"
    android:textColor="#333333"
    android:layout_marginLeft="@dimen/dp_24"
    android:layout_marginTop="@dimen/dp_35"
    />
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="#b11450"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_10"
        android:text="选择合适的影院"
        android:layout_below="@id/movieNmae"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/fill_recyclerview"
        android:layout_width="@dimen/dp_312"
        android:layout_height="wrap_content"
        android:layout_below="@id/text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_10"/>
    <ImageView
        android:id="@+id/return_image"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_60"
        android:background="@mipmap/com_icon_return_default"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_24"
        android:layout_marginBottom="@dimen/dp_20"/>
</RelativeLayout>