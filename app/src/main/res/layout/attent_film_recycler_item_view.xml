<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="@drawable/home_recycler_simple_bg"
    android:padding="@dimen/dp_10"
    >

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/film_simple"
        android:layout_width="@dimen/dp_103"
        android:layout_height="@dimen/dp_128"
        android:layout_marginRight="@dimen/dp_10"
        />
    <TextView
        android:id="@+id/film_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/film_simple"
        android:layout_marginBottom="@dimen/dp_10"
        android:textSize="@dimen/sp_14"
        android:textColor="#333"
        />
    <TextView
        android:id="@+id/film_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/film_simple"
        android:layout_below="@id/film_name"
        android:maxLines="5"
        android:ellipsize="end"
        android:textSize="@dimen/sp_12"
        android:textColor="#333"
        />
    <TextView
        android:id="@+id/film_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#999"
        android:textSize="@dimen/sp_12"
        android:layout_toRightOf="@id/film_simple"
        android:layout_alignBottom="@id/film_simple"
        />
    
</RelativeLayout>