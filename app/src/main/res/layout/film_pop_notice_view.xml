<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#10dcdcdc"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/notice_loyout"
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="@dimen/dp_120"
        android:background="@drawable/film_detail_loyout_bg">
        <TextView
            android:id="@+id/notice_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预告片"
            android:textColor="#333333"
            android:textSize="@dimen/sp_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginLeft="@dimen/dp_24"/>
        <View
            android:id="@+id/view_notice"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_3"
            android:background="@drawable/divide_checked"
            app:layout_constraintLeft_toLeftOf="@id/notice_name"
            app:layout_constraintTop_toBottomOf="@id/notice_name"
            android:layout_marginTop="@dimen/dp_6"/>
        <ImageView
            android:id="@+id/notice_down"
            android:layout_width="@dimen/dp_24"
            android:layout_height="@dimen/dp_24"
            android:background="@mipmap/com_icon_down_default"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/notice_recyclerview"
            android:layout_width="@dimen/dp_0"
            android:layout_height="@dimen/dp_0"
            app:layout_constraintTop_toBottomOf="@id/view_notice"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="@dimen/dp_24"
            android:layout_marginLeft="@dimen/dp_24"
            android:layout_marginTop="@dimen/dp_20"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>