<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/film_detail_loyout_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.design.widget.TabLayout
        android:id="@+id/detail_tab"
        android:layout_width="@dimen/dp_250"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:tabIndicatorColor="#e8175e"
        app:tabGravity="fill"
        app:tabIndicatorHeight="3dp"
        android:padding="-1dp"
        android:paddingBottom="-1dp"
        android:paddingTop="-1dp"
        android:paddingRight="-1dp"
        android:paddingEnd="-1dp"
        android:paddingLeft="-1dp"
        android:paddingStart="-1dp"
        app:tabMode="fixed"
        />
    <ImageView
        android:id="@+id/detail_down"
        android:layout_width="@dimen/dp_24"
        android:layout_height="@dimen/dp_24"
        android:layout_alignTop="@id/detail_tab"
        android:src="@mipmap/com_icon_down_default"
        android:layout_toRightOf="@id/detail_tab"
        android:layout_alignBottom="@id/detail_tab"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/detail_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_below="@id/detail_tab"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>